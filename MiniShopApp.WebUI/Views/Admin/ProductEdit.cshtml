@model MiniShopApp.WebUI.Models.ProductModel

<h5 class="display-4">Edit Poduct</h5>
<hr />
<form asp-controller="Admin" asp-action="ProductEdit" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Name</label>
                <div class="col-sm-9"><input type="text" asp-for="Name" /></div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Url</label>
                <div class="col-sm-9"><input type="text" asp-for="Url" /></div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Description</label>
                <div class="col-sm-9"><input type="text" asp-for="Description" /></div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Image-Url</label>
                <div class="col-sm-9"><input type="text" asp-for="ImageUrl" /></div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Price</label>
                <div class="col-sm-9"><input type="text" asp-for="Price" /></div>
            </div>
            <input type="hidden" name="ProductId" value="@Model.ProductId" />
            <div class="form-group row mb-2">
                <div class="col-sm-9"><button type="submit" class="btn btn-primary">Update Product</button></div>
            </div>
        </div>
        <div class="col-md-6">
            @foreach (var item in ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="categoryIds" value="@item.CategoryId" id="category_@item.CategoryId"
                           @if (Model.SelectedCategories!=null)
                           {
                               @(Model.SelectedCategories.Any(x => x.CategoryId == item.CategoryId) ? "checked" : "")
                           }
                           />


                    <label class="form-check-label">@item.Name</label>

                </div>
            }
            <hr />
            <div class="form-check">
                <input type="checkbox" asp-for="IsApproved" class="form-check-input" />
                <label class="form-check-label">Is Approved ?</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="IsHome" class="form-check-input" />
                <label class="form-check-label">IsHome ?</label>
            </div>
        </div>
    </div>
</form>


