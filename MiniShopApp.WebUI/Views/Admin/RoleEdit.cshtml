@model RoleDetails
<h5 class="display-4">Edit Role</h5>
<hr />
<form asp-controller="Admin" asp-action="RoleEdit" method="post">
    <input type="hidden" name="RoleId" value="@Model.Role.Id" />
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />

    <div class="row">
        <div class="col-md-6">
            <h6 class="bg-info text-white p-1">Add to @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td colspan="2">Bütün kullanıcılar role ait</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>User Name</td>
                        <td width="100">Select</td>
                    </tr>
                    @foreach (var user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>

        <div class="col-md-6">
            <h6 class="bg-info text-white p-1">Remove from @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.Members.Count() == 0)
                {
                    <tr>
                        <td colspan="2">Bu role ait kullanıcı bulunmamaktadır.</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>User Name</td>
                        <td width="100">Select</td>
                    </tr>
                    @foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
    <div class="">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>